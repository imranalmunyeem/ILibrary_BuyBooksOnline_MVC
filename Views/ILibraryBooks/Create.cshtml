@model ILibraryBooks

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient text-white py-3">
            <h2 class="text-center m-0">Add New Book</h2>
        </div>
        <div class="card-body p-4">
            <form method="post" class="row">
                <div class="border p-3 col-md-6 offset-md-3">
                    <!-- Replace with your server-side validation summary if needed -->
                    <!-- <div asp-validation-summary="ModelOnly"></div> -->
                    <div class="form-floating mb-3">
                        <input asp-for="Title" class="form-control" />
                        <label asp-for="Title">Title</label>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Description" class="form-control" />
                        <label asp-for="Description">Description</label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="ISBN" class="form-control" />
                        <label asp-for="ISBN">ISBN</label>
                        <span asp-validation-for="ISBN" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Author" class="form-control" />
                        <label asp-for="Author">Author</label>
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="ListPrice" class="form-control" />
                        <label asp-for="ListPrice">ListPrice</label>
                        <span asp-validation-for="ListPrice" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Price" class="form-control" />
                        <label asp-for="Price">Price</label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Price100" class="form-control" />
                        <label asp-for="Price100">Price100</label>
                        <span asp-validation-for="Price100" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Price50" class="form-control" />
                        <label asp-for="Price50">Price50</label>
                        <span asp-validation-for="Price50" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <button type="submit" class="btn btn-primary w-100">Create</button>
                        </div>
                        <div class="col-md-6">
                            <a asp-controller="ILibraryBooks" asp-action="Index" class="btn btn-outline-primary w-100">
                                Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
