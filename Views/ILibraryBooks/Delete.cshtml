@model ILibraryBooks

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Library Book</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating mb-3">
                    <input asp-for="Title" disabled class="form-control" />
                    <label asp-for="Title">Title</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Description" disabled class="form-control" />
                    <label asp-for="Description">Display Order</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="ISBN" disabled class="form-control" />
                    <label asp-for="ISBN">Display Order</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="ListPrice" disabled class="form-control" />
                    <label asp-for="ListPrice">Display Order</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Price" disabled class="form-control" />
                    <label asp-for="Price">Display Order</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Price50" disabled class="form-control" />
                    <label asp-for="Price50">Display Order</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Price100" disabled class="form-control" />
                    <label asp-for="Price100">Display Order</label>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="ILibraryBooks" asp-action="Index" class="btn btn-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
