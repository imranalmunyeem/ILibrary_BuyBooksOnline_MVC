@model ILibraryBooks

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Library Book</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />

            <div class="border p-3 mt-4">
                <div class="form-floating mb-3">
                    <input asp-for="Title" class="form-control" />
                    <label asp-for="Title">Title</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Author" class="form-control" />
                    <label asp-for="Author">Author</label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Description" class="form-control" />
                    <label asp-for="Description">Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="ISBN" class="form-control" />
                    <label asp-for="ISBN">ISBN</label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="ListPrice" class="form-control" />
                    <label asp-for="ListPrice">ListPrice</label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Price" class="form-control" />
                    <label asp-for="Price">Price</label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Price50" class="form-control" />
                    <label asp-for="Price50">Price50</label>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Price100" class="form-control" />
                    <label asp-for="Price100">Price100</label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="ILibraryBooks" asp-action="Index" class="btn btn-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
